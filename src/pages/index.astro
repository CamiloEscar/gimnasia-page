---
import Layout from '../layouts/Layout.astro';
import ParallaxSection from '../components/ParallaxSection.astro';

const classes = [
  {
    title: 'Gimnasia Jazz',
    description: 'La gimnasia jazz combina elementos de danza, gimnasia y ejercicios aeróbicos para crear una rutina divertida y energética.',
    benefits: ['Mejora la coordinación', 'Aumenta la flexibilidad', 'Fortalece los músculos'],
    image: '/images/gimnasia-jazz.jpg'
  },
  {
    title: 'Pilates',
    description: 'Pilates es un sistema de ejercicios centrado en mejorar la flexibilidad, la fuerza y la conciencia corporal.',
    benefits: ['Fortalece el core', 'Mejora la postura', 'Reduce el estrés'],
    image: '/images/pilates.jpg'
  }
];

const schedule = [
  { day: 'Lunes', jazz: '18:00 - 19:30', pilates: '20:00 - 21:00' },
  { day: 'Martes', jazz: '19:00 - 20:30', pilates: '18:00 - 19:00' },
  { day: 'Miércoles', jazz: '18:00 - 19:30', pilates: '20:00 - 21:00' },
  { day: 'Jueves', jazz: '19:00 - 20:30', pilates: '18:00 - 19:00' },
  { day: 'Viernes', jazz: '18:00 - 19:30', pilates: '20:00 - 21:00' },
];

const testimonials = [
  { name: 'María G.', text: 'Las clases de gimnasia jazz han transformado mi vida. ¡Me siento más enérgica y feliz!', avatar: '/images/avatar-1.jpg' },
  { name: 'Carlos R.', text: 'Pilates me ha ayudado enormemente con mi dolor de espalda. Los instructores son excelentes.', avatar: '/images/avatar-2.jpg' },
  { name: 'Laura M.', text: 'La combinación de gimnasia jazz y pilates es perfecta. Recomiendo este gimnasio a todos.', avatar: '/images/avatar-3.jpg' },
];
---

<Layout title="Gimnasia Jazz y Pilates">
  <ParallaxSection
    id="inicio"
    title="Gimnasia Jazz y Pilates"
    subtitle="Descubre el poder de tu cuerpo a través del movimiento"
    image="/images/hero-background.jpeg"
  >
    <div class="absolute inset-0 bg-black opacity-50"></div>
    <div class="relative z-10 text-center text-white">
      <h1 class="text-5xl md:text-6xl font-bold mb-4 text-shadow-lg" data-aos="fade-down">Gimnasia Jazz y Pilates</h1>
      <p class="text-xl md:text-2xl text-shadow-md mb-8" data-aos="fade-up" data-aos-delay="200">Descubre el poder de tu cuerpo a través del movimiento</p>
      <a href="#clases" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-full transition duration-300 ease-in-out transform hover:scale-105" data-aos="fade-up" data-aos-delay="400">
        Explora Nuestras Clases
      </a>
    </div>
  </ParallaxSection>

  <section id="clases" class="py-20 bg-gray-100">
    <div class="container mx-auto px-6">
      <h2 class="text-4xl font-bold text-center mb-12" data-aos="fade-up">Nuestras Clases</h2>
      <div class="grid md:grid-cols-2 gap-12">
        {classes.map((classItem, index) => (
          <div class="bg-white rounded-lg shadow-lg overflow-hidden transform transition duration-300 hover:scale-105" data-aos="fade-up" data-aos-delay={index * 200}>
            <img src={classItem.image} alt={classItem.title} class="w-full h-64 object-cover" />
            <div class="p-6">
              <h3 class="text-2xl font-semibold mb-4">{classItem.title}</h3>
              <p class="text-gray-600 mb-4">{classItem.description}</p>
              <ul class="list-disc list-inside text-gray-600">
                {classItem.benefits.map((benefit) => (
                  <li>{benefit}</li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <ParallaxSection
    id="horarios"
    title="Horarios"
    image="/images/horarios-background.webp"
  >
    <div class="bg-white bg-opacity-95 rounded-lg p-8 mt-8 max-w-4xl mx-auto shadow-2xl z-10" data-aos="fade-up">
      <h2 class="text-4xl font-bold text-center mb-8">Horarios de Clases</h2>
      <div class="overflow-x-auto">
        <table class="w-full text-left border-collapse">
          <thead>
            <tr class="bg-gray-200">
              <th class="py-4 px-6 font-semibold text-gray-700 rounded-tl-lg">Día</th>
              <th class="py-4 px-6 font-semibold text-gray-700">Gimnasia Jazz</th>
              <th class="py-4 px-6 font-semibold text-gray-700 rounded-tr-lg">Pilates</th>
            </tr>
          </thead>
          <tbody>
            {schedule.map((item, index) => (
              <tr class={index % 2 === 0 ? "bg-gray-50" : "bg-white"}>
                <td class="py-4 px-6 border-b">{item.day}</td>
                <td class="py-4 px-6 border-b">{item.jazz}</td>
                <td class="py-4 px-6 border-b">{item.pilates}</td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </ParallaxSection>

  <section id="ubicacion" class="py-20 bg-white">
    <div class="container mx-auto px-6">
      <h2 class="text-4xl font-bold text-center mb-12" data-aos="fade-up">Ubicación</h2>
      <div class="flex flex-wrap -mx-4">
        <div class="w-full md:w-1/2 px-4 mb-8 md:mb-0" data-aos="fade-right">
          <div class="rounded-lg overflow-hidden shadow-lg">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3284.0168878893742!2d-58.237301!3d-32.4738157!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95afda57b9f3bdb9%3A0xb8bd84d18ef8bb69!2sSceliga+Pablo+Reverendo+825,+E3260+Concepci%C3%B3n+del+Uruguay,+Entre+R%C3%ADos!5e0!3m2!1ses!2sar!4v1635789876543!5m2!1ses!2sar"
              width="100%"
              height="450"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
            ></iframe>
          </div>
        </div>
        <div class="w-full md:w-1/2 px-4" data-aos="fade-left">
          <div class="bg-gray-100 rounded-lg p-8 h-full shadow-lg">
            <h3 class="text-2xl font-semibold mb-4">Visítanos</h3>
            <p class="text-gray-600 mb-4">Nos encontramos en el corazón de la ciudad, fácilmente accesible por transporte público.</p>
            <ul class="space-y-2">
              <li class="flex items-center">
                <i class="fas fa-map-marker-alt text-blue-600 mr-2"></i>
                <span>Pablo Sceliga 825</span>
              </li>
              <li class="flex items-center">
                <i class="fas fa-phone text-blue-600 mr-2"></i>
                <span>+54 11 1234-5678</span>
              </li>
              <li class="flex items-center">
                <i class="fas fa-envelope text-blue-600 mr-2"></i>
                <span>info@gimnasiajazzypilates.com</span>
              </li>
            </ul>
          
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="testimonios" class="py-20 bg-gray-100">
    <div class="container mx-auto px-6">
      <h2 class="text-4xl font-bold text-center mb-12" data-aos="fade-up">Lo que dicen nuestros clientes</h2>
      <div class="swiper-container" data-aos="fade-up" data-aos-delay="200">
        <div class="swiper-wrapper">
          {testimonials.map((testimonial) => (
            <div class="swiper-slide">
              <div class="bg-white rounded-lg shadow-lg p-8">
                <div class="flex items-center mb-4">
                  <img src={testimonial.avatar} alt={testimonial.name} class="w-12 h-12 rounded-full mr-4" />
                  <div>
                    <p class="font-semibold">{testimonial.name}</p>
                  </div>
                </div>
                <p class="text-gray-600 mb-4 italic">"{testimonial.text}"</p>
              </div>
            </div>
          ))}
        </div>
        <div class="swiper-pagination"></div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .text-shadow-lg {
    text-shadow: 0 4px 6px rgba(0, 0, 0, 0.5);
  }
  .text-shadow-md {
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  }
  .swiper-container {
    width: 100%;
    padding-bottom: 50px;
  }
  .swiper-slide {
    opacity: 0.4;
    transition: opacity 0.3s;
  }
  .swiper-slide-active {
    opacity: 1;
  }
  .swiper-pagination {
    bottom: 0;
  }
  .swiper-button-next, .swiper-button-prev {
    color: #4A5568;
  }
</style>